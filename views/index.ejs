<%- include('./partials/header') %>
<h1><%= title %></h1>
<p><%= title %> for Your Apps</p>
<form action="/" method="post">
  <div class="form-group">
    <label for="urlInput">URL:</label>
    <input type="text" name="urlInput" class="form-control" id="urlInput"/>
  </div>
  <div class="form-row">
    <div class="col">
      <label>Grouping:</label>
      <input type="text" name="grouping" class="form-control" id="grouping"/>
    </div>
    <div class="col">
      <label for="appName">Application</label>
      <select name="apps" id="apps" class="form-control">
        <option value="psIps">PS/IPS</option>
        <option value="tronTxs">Tron/TXS</option>
        <option value="cmsIcs">CMS/ICS</option>
      </select>
    </div>
  </div>
  <br>
  <button type="submit" value="Fetch Version" class="btn">Submit</button>
</form>
<br>
<br>
<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <th scope="col">Application URL</th>
    <th scope="col">Grouping</th>
    <th scope="col">Version</th>
    <th scope="col">Fetch Date</th>
  </thead>
  <% versionInfo.forEach(element => { %>
  <tr>
    <td><%- element.url %></td>
    <td><%- element.grouping %></td>
    <td><%- element.version %></td>
    <td>
      <%- element.createdAt.toLocaleString('en-US', { year: 'numeric', month:
      'long', day: 'numeric', hour:'numeric', minute: 'numeric',
      second:'numeric', timeZoneName: 'short' }) %>
    </td>
  </tr>
  <% }) %>
</table>
<%- include('./partials/footer') %>
